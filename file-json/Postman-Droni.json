{
  "info": {
    "_postman_id": "mock-api-realistic-001",
    "name": "Mock API Collection - Realistic Data",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Device",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer testtoken123", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"pk\": \"device-abc123\"\n}"
        },
        "url": { "raw": "http://localhost:3000/device", "host": ["http://localhost:3000/device"] },
        "description": "Crea un nuovo device"
      }
    },
    {
      "name": "Get Device",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer testtoken123", "type": "text" }
        ],
        "url": { "raw": "http://localhost:3000/device/device-1", "host": ["http://localhost:3000/device/device-1"] },
        "description": "Recupera i dettagli di un device usando DEVICE_ID"
      }
    },
    {
      "name": "List Datasets",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer testtoken123", "type": "text" }
        ],
        "url": { "raw": "http://localhost:3000/dataset?device_id=device-1", "host": ["http://localhost:3000/dataset"], "query": [{ "key": "device_id", "value": "device-1" }] },
        "description": "Lista i dataset per un device specifico"
      }
    },
    {
      "name": "Create Dataset",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer testtoken123", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"device-1\",\n  \"name\": \"Missione Drone 01\",\n  \"description\": \"Raccolta dati volo area boschiva - 01/09/2025\"\n}"
        },
        "url": { "raw": "http://localhost:3000/dataset", "host": ["http://localhost:3000/dataset"] },
        "description": "Crea un nuovo dataset per un device"
      }
    },
    {
      "name": "Add Flight Data",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer testtoken123", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"device-1\",\n  \"dataset_id\": \"dataset-1\",\n  \"timestamp\": 1693641600,\n  \"localization\": { \"latitude\": 44.9876, \"longitude\": 12.3421 },\n  \"payload\": \"altitude:120m, temperature:22C, humidity:55%\"\n}"
        },
        "url": { "raw": "http://localhost:3000/flight_data", "host": ["http://localhost:3000/flight_data"] },
        "description": "Aggiunge un flight data a un dataset"
      }
    },
    {
      "name": "Get Flight Data for Dataset",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer testtoken123", "type": "text" }
        ],
        "url": { "raw": "http://localhost:3000/dataset/dataset-1/flight_datas", "host": ["http://localhost:3000/dataset/dataset-1/flight_datas"] },
        "description": "Recupera tutti i flight data per un dataset specifico"
      }
    }
  ]
}
